{
  "plugins": ["stylelint-scss"],
  "customSyntax": "postcss-scss",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extends",
          "mixin",
          "include",
          "content",
          "extend",
          "tailwind",
          "layer",
          "apply"
        ]
      }
    ]
  }
}
