{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "stylelint.validate": ["css", "scss"],
  "scss.validate": false,
  "css.validate": false,
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.validate": true
}
